  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "target": "es6",
    "rootDir": "src",
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  }
}
